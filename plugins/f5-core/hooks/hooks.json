{
  "hooks": [
    {
      "matcher": {
        "event": "SessionStart"
      },
      "hook": {
        "type": "command",
        "command": "bash hooks/scripts/mcp-auto-load.sh",
        "timeout": 5
      }
    },
    {
      "matcher": {
        "event": "PreToolUse",
        "tools": ["Edit", "Write", "MultiEdit"]
      },
      "hook": {
        "type": "command",
        "command": "bash hooks/pre-edit.sh"
      }
    },
    {
      "matcher": {
        "event": "PreToolUse",
        "tools": ["Edit", "Write", "MultiEdit"]
      },
      "hook": {
        "type": "command",
        "command": "bash hooks/scripts/pre-edit-checklist.sh"
      }
    },
    {
      "matcher": {
        "event": "PostToolUse",
        "tools": ["Edit", "Write", "MultiEdit"]
      },
      "hook": {
        "type": "command",
        "command": "bash hooks/post-edit.sh"
      }
    },
    {
      "matcher": {
        "event": "PostToolUse",
        "tools": ["Edit", "Write", "MultiEdit"]
      },
      "hook": {
        "type": "command",
        "command": "bash hooks/scripts/post-edit-checklist.sh"
      }
    },
    {
      "matcher": {
        "event": "Stop"
      },
      "hook": {
        "type": "command",
        "command": "bash hooks/session-end.sh"
      }
    }
  ]
}

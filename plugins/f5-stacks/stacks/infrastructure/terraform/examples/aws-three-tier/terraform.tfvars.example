# =============================================================================
# Example Terraform Variables
# Copy this file to terraform.tfvars and customize values
# =============================================================================

# Project Configuration
project_name = "myapp"
environment  = "dev"
region       = "us-east-1"

# VPC Configuration
vpc_cidr           = "10.0.0.0/16"
single_nat_gateway = true  # Use multiple NAT gateways for prod

# Application Configuration
container_image   = "nginx:alpine"  # Replace with your Docker image
app_port          = 80
health_check_path = "/"

# Fargate Task Configuration
task_cpu    = 256   # 0.25 vCPU
task_memory = 512   # 512 MB

# Auto Scaling
desired_count = 2
min_capacity  = 1
max_capacity  = 10

# Logging
log_retention_days = 30

# Database Configuration
database_engine            = "postgres"
database_engine_version    = "15.4"
database_instance_class    = "db.t3.micro"
database_allocated_storage = 20
database_name              = "app"
database_username          = "admin"
database_multi_az          = false  # Enable for production
database_backup_retention  = 7
